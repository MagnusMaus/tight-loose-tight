---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
const { title, description, pubDate, category, tags } = post.data;

const formattedDate = new Date(pubDate).toLocaleDateString('de-DE', {
  year: 'numeric',
  month: 'long', 
  day: 'numeric'
});
---

<BaseLayout title={title} description={description}>
  <article class="container blog-post">
    <header>
      <div class="meta">
        <span class="category">{category}</span>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      <h1>{title}</h1>
      {tags && (
        <div class="tags">
          {tags.map(tag => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>
    
    <div class="content">
      <Content />
    </div>

    <footer>
      <a href="/blog" class="back-link">← Zurück zum Blog</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
  }

  header {
    margin-bottom: 3rem;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-gray);
    margin-bottom: 1rem;
  }

  .category {
    color: var(--color-primary);
    font-weight: 600;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: #f3f4f6;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    color: var(--color-gray);
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .content h2 {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content ul, .content ol {
    margin-bottom: 1.5rem;
    margin-left: 2rem;
  }

  .content li {
    margin-bottom: 0.5rem;
  }

  .content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-gray);
  }

  .content code {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .content pre {
    background: #1a1a1a;
    color: white;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .content pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  .content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }

  .back-link {
    font-weight: 600;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    
    .content {
      font-size: 1rem;
    }
  }
</style>
